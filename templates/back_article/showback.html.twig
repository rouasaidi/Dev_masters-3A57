{% extends 'base1.html.twig' %}

{% block title %}
    <h2 class="text-primary">Article Details</h2>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row">
            <div class="col-md-3">
                <!-- Empty column to maintain layout consistency with the left sidebar or navbar -->
            </div>
            <div class="col-md-9">
                <a href="{{ path('app_back_article_index') }}" class="btn btn-primary">Back to List</a>
                <br><br>
                <div class="card" style="margin-bottom: 10px;">
                    <div class="card-body">
                        <h5 class="card-title">{{ article.title }}</h5>
                        <p class="card-text" style="margin-bottom: 30px;">{{ article.content }}</p>
                        <div class="row justify-content-center">
                            <div class="col-md-6 text-center">
                                <img src="{{ vich_uploader_asset(article) }}" alt="image desc"  style="width: 100%">
                            </div>
                        </div>
                        <p class="card-text" style="margin-bottom: 30px;">Likes: {{ article.likes }}</p>
                        <p class="card-text" style="margin-bottom: 30px;">Dislikes: {{ article.dislikes }}</p>
                        <p class="card-text" style="margin-bottom: 30px;">Date: {{ article.date }}</p>
                        <p class="card-text" style="margin-bottom: 30px;">User: {{ article.user.name }}</p>
                        <!-- Add other attributes as needed -->
                    </div>
                </div>
                <br>
                <h3>Comments:</h3>
                {% for comment in article.comments %}
                    <div class="card">
                        <div class="card-body">
                            <p class="card-text">User: {{ comment.user.name }}</p>
                            <p class="card-text">{{ comment.content }}</p>
                            <form method="post" action="{{ path('app_back_comment_delete', {'id': comment.id}) }}" onsubmit="return confirm('Are you sure you want to delete this comment?');">
                                <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ comment.id) }}">
                                <button type="submit" class="btn btn-danger">Delete</button>
                            </form>
                        </div>
                    </div>
                    <br>
                {% endfor %}
                <br>
                <form method="post" action="{{ path('app_back_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this article?');">
                    <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                    <button type="submit" class="btn btn-danger">Delete Article</button>
                </form>
            </div>
        </div>
    </div>
{% endblock %}
