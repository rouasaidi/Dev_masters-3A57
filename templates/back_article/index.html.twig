{% extends 'base1.html.twig' %}

{% block title %}
    <h2 class="text-primary">Article Dashboard</h2>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-lg-8"  style="width:80%">
                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in articles %}
                            <tr>
                                <td>{{ article.id }}</td>
                                <td>{{ article.title }}</td>
                                <td>{{ article.date }}</td>
                                <td>
                                    <a href="{{ path('app_back_article_show', {'id': article.id}) }}" class="btn btn-primary">Show</a>
                                   
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>
            </div>
        </div>
    </div>
{% endblock %}
