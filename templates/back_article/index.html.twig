{% extends 'base1.html.twig' %}

{% block title %}
    <h2 class="text-primary">Article Dashboard</h2>
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-end">
            <div class="col-lg-8" style="width: 80%">

                <div class="mb-3">
                    <form action="{{ path('app_back_article_index_triedatee') }}" method="get" class="d-flex">
                        <input type="text" name="searchTerm" value="{{ app.request.query.get('searchTerm') }}" class="form-control me-2" placeholder="Rechercher par titre">
                        <button class="btn btn-primary" type="submit">Rechercher</button>
                    </form>
                </div>

                <div class="mb-3">
                    <a href="{{ path('app_back_article_index_triedatee', {'order': 'asc'}) }}" class="btn btn-primary me-2">Trier par date croissante</a>
                    <a href="{{ path('app_back_article_index_triedatee', {'order': 'desc'}) }}" class="btn btn-primary">Trier par date d√©croissante</a>
                </div>

                <table class="table table-striped table-hover">
                    <thead>
                        <tr>
                            <th>Id</th>
                            <th>Title</th>
                            <th>Date</th>
                            <th>Actions</th>
                        </tr>
                    </thead>
                    <tbody>
                        {% for article in pagination %}
                            <tr>
                                <td>{{ article.id }}</td>
                                <td>{{ article.title }}</td>
                                <td><p>{{ article.getDate()|date('Y-m-d H:i:s')}}</p></td>
                                <td>
                                    <a href="{{ path('app_back_article_show', {'id': article.id}) }}" class="btn btn-primary">Show</a>
                                </td>
                            </tr>
                        {% else %}
                            <tr>
                                <td colspan="4">No records found</td>
                            </tr>
                        {% endfor %}
                    </tbody>
                </table>

{# Display pagination links #}
<nav aria-label="Page navigation">
    <ul class="pagination justify-content-center">
        <li class="page-item {% if pagination.currentPageNumber == 1 %}disabled{% endif %}">
            <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query|merge({'page': 1})) }}">First</a>
        </li>
        {% for page in 1..pagination.pageCount %}
            <li class="page-item {% if page == pagination.currentPageNumber %}active{% endif %}">
                <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query|merge({'page': page})) }}">{{ page }}</a>
            </li>
        {% endfor %}
        <li class="page-item {% if pagination.currentPageNumber == pagination.pageCount %}disabled{% endif %}">
            <a class="page-link" href="{{ path(app.request.attributes.get('_route'), app.request.query|merge({'page': pagination.pageCount})) }}">Last</a>
        </li>
    </ul>
</nav>



            </div>
        </div>
    </div>
{% endblock %}
