{% extends 'baseback.html.twig' %}

{% block title %}add admin{% endblock %}

{% block body %}
<!doctype html>
<html lang="en">

<head>
  <meta charset="utf-8">
  <meta name="viewport" content="width=device-width, initial-scale=1">
  <title>EDIT admin</title>
  <link rel="shortcut icon" type="image/png" href="../assets/images/logos/favicon.png" />
  <link rel="stylesheet" href="../assets/css/styles.min.css" />
</head>

<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
          <div class="col-md-8 col-lg-6 col-xxl-3">
            <div class="card mb-0">
              <div class="card-body">
                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                  <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                </a>
                <p class="text-center">Your Social Campaigns</p>
                {{ form_start(formedit,{'attr': {'novalidate': 'novalidate'}} ) }}
                <div class="mb-3">
                  {{ form_widget(formedit.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example3c'}}) }}
                  {{ form_label(formedit.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}

                  {% for error in formedit.email.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-3">
                  {{ form_widget(formedit.name, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example4c'}}) }}
                  {{ form_label(formedit.name, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}

                  {% for error in formedit.name.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(formedit.password, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example5c'}}) }}
                  {{ form_label(formedit.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}    

                  {% for error in formedit.password.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(formedit.phone, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example6c'}}) }}
                  {{ form_label(formedit.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}    

                  {% for error in formedit.phone.vars.errors %}
                    <div class="d-flex align-items-center">
                        <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                        <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                    </div>
                {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(formedit.cin, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example7c'}}) }}
                  {{ form_label(formedit.cin, 'CIN', {'label_attr': {'class': 'form-label'}}) }}

                  {% for error in formedit.cin.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(formedit.image, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example8c'}}) }}
                  {{ form_label(formedit.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                </div>
                <div class="mb-4">
                  {{ form_widget(formedit.role, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example9c'}}) }}
                  {{ form_label(formedit.role, 'Role', {'label_attr': {'class': 'form-label'}}) }}
                </div>
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2"> Sign Up</button>
                </div>
                {{form_end(formedit) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
{% endblock %}
