{% extends 'baseback.html.twig' %}

{% block title %}add admin{% endblock %}

{% block body %}
<!doctype html>
<body>
  <!--  Body Wrapper -->
  <div class="page-wrapper" id="main-wrapper" data-layout="vertical" data-navbarbg="skin6" data-sidebartype="full"
    data-sidebar-position="fixed" data-header-position="fixed">
    <div class="position-relative overflow-hidden radial-gradient min-vh-100 d-flex align-items-center justify-content-center">
      <div class="d-flex align-items-center justify-content-center w-100">
        <div class="row justify-content-center w-100">
          <div class="col-md-8 col-lg-6 col-xxl-3">
            <div class="card mb-0">
              <div class="card-body">
                <a href="./index.html" class="text-nowrap logo-img text-center d-block py-3 w-100">
                  <img src="../assets/images/logos/dark-logo.svg" width="180" alt="">
                </a>
                <p class="text-center"> ADD ADMIN</p>
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}} ) }}
                <div class="mb-3">
                  {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example3c'}}) }}
                  {{ form_label(form.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}

                  {% for error in form.email.vars.errors %}
                          <div class="d-flex align-items-center">
                              <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                              <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                          </div>
                      {% endfor %}
                </div>
                <div class="mb-3">
                  {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example4c'}}) }}
                  {{ form_label(form.name, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}

                  {% for error in form.name.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example5c'}}) }}
                  {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}    

                  {% for error in form.password.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example6c'}}) }}
                  {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}    

                  {% for error in form.phone.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(form.cin, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example7c'}}) }}
                  {{ form_label(form.cin, 'CIN', {'label_attr': {'class': 'form-label'}}) }}

                  {% for error in form.cin.vars.errors %}
                  <div class="d-flex align-items-center">
                      <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                      <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                  </div>
              {% endfor %}
                </div>
                <div class="mb-4">
                  {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example8c'}}) }}
                  {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                </div>
            
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary w-100 py-8 fs-4 mb-4 rounded-2"> Sign Up</button>
                </div>
                {{form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
  <script src="../assets/libs/jquery/dist/jquery.min.js"></script>
  <script src="../assets/libs/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
</body>

</html>
{% endblock %}
