{% extends 'baseback.html.twig' %}

{% block body %}
    <body>
        <!-- Hero section with background image -->
        <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');">
            <div class="overlay"></div>
            <div class="container">
                <div class="row no-gutters slider-text align-items-center justify-content-center">
                    <div class="col-md-9 ftco-animate text-center">
                        <h1 class="mb-2 bread">Our Events</h1>
                        <p class="breadcrumbs"><span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span> <span>Events <i class="ion-ios-arrow-forward"></i></span></p>
                    </div>
                </div>
            </div>
        </section>

        <!-- Form section -->
        <div class="container">
            <div class="row justify-content-center">
                <div class="col-lg-8">
                {{ form_start(f,{'attr': {'novalidate': 'novalidate'}} ) }}

               

                    <div id="event">
                     <div class="form-group">
                            {{ form_label(f.image, 'Image Path') }}
                            {{ form_widget(f.image, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(f.image) }}
                        </div>
                        <!-- Form field for 'nom' -->
                        <div class="form-group">
                            {{ form_label(f.nom, 'Event Name') }}
                            {{ form_widget(f.nom, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(f.nom) }}
                        </div>

                        <!-- Form field for 'lieu' -->
                        <div class="form-group">
                            {{ form_label(f.lieu, 'Location') }}
                            {{ form_widget(f.lieu, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(f.lieu) }}
                        </div>

                        <!-- Form field for 'description' -->
                        <div class="form-group">
                            {{ form_label(f.description, 'Description') }}
                            {{ form_widget(f.description, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(f.description) }}
                        </div>

                        <!-- Fieldset for 'date_event' -->
                        <fieldset class="form-group">
                            <legend class="col-form-label required">Date Event</legend>
                            {{ form_widget(f.date_event, {'attr': {'class': 'form-control'}}) }}
                            {{ form_errors(f.date_event) }}
                        </fieldset>
                    </div>
                     

                    <div class="form-group">
                        <button type="submit" class="btn btn-primary">Submit</button>
                    </div>

                    {{ form_end(f) }}
                </div>
            </div>
        </div>
    </body>
{% endblock %}