{% extends 'baseback.html.twig' %}

{% block body %}
<div class="container">
  <div class="table-container">
    <table class="custom-table">
      <tr>
        <th>Id</th>
        <th>Name</th>
        <th>Description</th>
        <th>Date Event</th>
        <th>Adresse</th>
        <th>Picture</th>
        <th>Modifier</th>
        <th>Delete</th>
        <th>Show Tickets</th>
        
      </tr>
      {% for i in base_events %}
        <tr>
          <td>{{ i.id }}</td>
          <td>{{ i.nom }}</td>
          <td>{{ i.description }}</td>
          <td>{{ i.getDateEvent()|date("Y-m-d") }}</td>
          <td>{{ i.lieu }}</td>
          <td><img src="images/{{ i.image }}" alt="Event Image" class="event-image"></td>
          <td><a href="{{ path('modifierevent', {'id': i.id}) }}"</a>Update</td>
          <td><a href="{{ path('app_delete', {'id': i.id}) }}"</a>Delete</td>
              <td><a href="{{ path('app_showticketbyid', {'id': i.id}) }}"</a>show Tickets</td>
        </tr>
      {% endfor %}
    </table>
  </div>
  <aside class="sidebar">
    <!-- Aside content goes here -->
  </aside>
</div>

<style>
.container {
  display: flex;
  justify-content: center; /* Center horizontally */
  align-items: center;
}

.table-container {
  flex: 1;
  
  margin-right: 20px;
  margin-left: 80px; 
}

.custom-table {
  width: 100%;
  border-collapse: collapse;
  background-color: #f2f2f2;
}


.custom-table th {
  background-color: #333;
  color: #fff;
}

.custom-table th,
.custom-table td {
  padding: 10px;
  text-align: left;
  width: auto;
}

.custom-table tr:nth-child(even) {
  background-color: #ddd;
}

.sidebar {
  width: 300px;
  /* Add your sidebar styles here */
}
.event-image {
  max-width: 100px; /* Adjust the width as needed */
  max-height: 100px; /* Adjust the height as needed */
}
</style>
{% endblock %}
