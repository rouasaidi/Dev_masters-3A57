{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
<body>
    <!DOCTYPE html>
    <html lang="en">
    <head>
        <meta charset="UTF-8">
        <meta name="viewport" content="width=device-width, initial-scale=1.0">
        <meta http-equiv="X-UA-Compatible" content="ie=edge">
        <title>Details of {{ donation.name }}</title>
        <link rel="stylesheet" href="{{ asset('https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css')}}" integrity="sha512-x1sEo5L9Y+Z4KqI0c6Gvq1DULB7voSiE99ki9yXCnkbWOdci/hnqmSOzvJNepBYNz/fLre68Zp2E+krOJplf9w==" crossorigin="anonymous" />

    </head>
    <body>
        <div class="row gutters">
            <div class="col-xl-3 col-lg-3 col-md-12 col-sm-12 col-12">
                <div class="card h-100">
                    <div class="card-body">
                        <div class="account-settings">
                            <div class="user-profile">
                                <div class="card h-100">
                                    <img src="{{ donation.image }}" alt="Image " class="rounded img-fluid">
                                   
                                </div>
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
            <div class="col-xl-9 col-lg-9 col-md-12 col-sm-12 col-12">
                <div class="card h-10">
                    <div class="card-body">
                    <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
                    <h4 class="mb-2 text-primary">Donation Details</h4>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="mb-2 text-primary">
                        <label for="fullName">Donation Name</label>
                    </div>
                    <h6 class="user-name">{{ donation.name }}</h6>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="mb-2 text-primary">
                        <label for="eMail">Description</label>
                    </div>
                    <h6 class="user-email">{{ donation.description }}</h6>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="mb-2 text-primary">
                        <label for="phone">category</label>
                       
                    </div>
                    <h6 class="user-phone">{{ donation.category }}</h6>
                </div>
                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="mb-2 text-primary">
                        <label for="website">Quantity</label>
                       
                        
                    </div>
                    <h6 class="user-phone">{{ donation.quantity}}</h6>
                </div>


                <div class="col-xl-6 col-lg-6 col-md-6 col-sm-6 col-12">
                    <div class="mb-2 text-primary">
                        <label for="phone">FeedBacks</label>
                    </div>
                    <table>
                        <tbody>
                            {% for index, FeedBack in donationFDesc %}
                                <tr>
                                    <td>
                                        <span>{{ FeedBack.description }}</span>  
                                    </td>
                                    <td>
                                        <div class="mb-2">
                                            <a href="{{ path('app_feedback_don_edit', {'id': feedbackid[index].id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-pencil-square" viewBox="0 0 16 16">
                                                <path d="M15.502 1.94a.5.5 0 0 1 0 .706L14.459 3.69l-2-2L13.502.646a.5.5 0 0 1 .707 0l1.293 1.293zm-1.75 2.456-2-2L4.939 9.21a.5.5 0 0 0-.121.196l-.805 2.414a.25.25 0 0 0 .316.316l2.414-.805a.5.5 0 0 0 .196-.12l6.813-6.814z"/>
                                                <path fill-rule="evenodd" d="M1 13.5A1.5 1.5 0 0 0 2.5 15h11a1.5 1.5 0 0 0 1.5-1.5v-6a.5.5 0 0 0-1 0v6a.5.5 0 0 1-.5.5h-11a.5.5 0 0 1-.5-.5v-11a.5.5 0 0 1 .5-.5H9a.5.5 0 0 0 0-1H2.5A1.5 1.5 0 0 0 1 2.5z"/>
                                              </svg></a> <!-- Icône pour l'édition -->
                                            <a href="{{ path('app_feedback_don_delete', {'id': feedbackid[index].id}) }}"><svg xmlns="http://www.w3.org/2000/svg" width="16" height="16" fill="currentColor" class="bi bi-trash3" viewBox="0 0 16 16">
                                                <path d="M6.5 1h3a.5.5 0 0 1 .5.5v1H6v-1a.5.5 0 0 1 .5-.5M11 2.5v-1A1.5 1.5 0 0 0 9.5 0h-3A1.5 1.5 0 0 0 5 1.5v1H1.5a.5.5 0 0 0 0 1h.538l.853 10.66A2 2 0 0 0 4.885 16h6.23a2 2 0 0 0 1.994-1.84l.853-10.66h.538a.5.5 0 0 0 0-1zm1.958 1-.846 10.58a1 1 0 0 1-.997.92h-6.23a1 1 0 0 1-.997-.92L3.042 3.5zm-7.487 1a.5.5 0 0 1 .528.47l.5 8.5a.5.5 0 0 1-.998.06L5 5.03a.5.5 0 0 1 .47-.53Zm5.058 0a.5.5 0 0 1 .47.53l-.5 8.5a.5.5 0 1 1-.998-.06l.5-8.5a.5.5 0 0 1 .528-.47M8 4.5a.5.5 0 0 1 .5.5v8.5a.5.5 0 0 1-1 0V5a.5.5 0 0 1 .5-.5"/>
                                              </svg></a> <!-- Icône pour la suppression -->
                                        </div>
                                    </td>
                                </tr>
                            {% endfor %}
                        </tbody>
                    </table>
                </div>
                
           
            <div class="row gutters">
                <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
             <div class="text-right">
                <a href="{{ path('app_donation_index') }}"class="btn btn-sm btn-primary px-3 py-2">Back to list</a>
                 <a href="{{ path('app_feedback_don_new')}}" class="btn btn-sm btn-primary px-3 py-2">Add FeedBack</a>
                
               
             </div>
            
              
            </div>
        </div>
    </div>
    
    
    
        </div>
    </div>
    </div>
    </div>
    </div>
                        <!-- Rest of your HTML content for personal details and address -->
                    </div>
                </div>
            </div>
        </div>
        
    
    
    </body>
    {% endblock %}
