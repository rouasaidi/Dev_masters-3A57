{% extends 'baseback.html.twig' %}


{% block body %}
    <h1>Liste Donations</h1>

    <table class="table">
        <thead>
            <tr>
                <th>Id</th>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Date_don</th>
                <th>Status</th>
                <th>Image</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for donation in donations %}
            <tr>
                <td>{{ donation.id }}</td>
                <td>{{ donation.name }}</td>
                <td>{{ donation.description }}</td>
                <td>{{ donation.category }}</td>
                <td>{{ donation.quantity }}</td>
                <td>{{ donation.dateDon ? donation.dateDon|date('Y-m-d') : '' }}</td>
                <td>{{ donation.status ? 'Yes' : 'No' }}</td>
                <td>{{ donation.image }}</td>
                <td>
                    <a href="{{ path('app_donation_show', {'id': donation.id}) }}">Show</a>
                    <a href="{{ path('app_donation_delete', {'id': donation.id}) }}">Delete</a>
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="9">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>

{%endblock%}