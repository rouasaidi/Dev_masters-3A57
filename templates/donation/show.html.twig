{% extends 'base.html.twig' %}

{% block title %}Donation{% endblock %}

{% block body %}
    <h1>Donation</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ donation.id }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ donation.name }}</td>
            </tr>
            <tr>
                <th>Description</th>
                <td>{{ donation.description }}</td>
            </tr>
            <tr>
                <th>Category</th>
                <td>{{ donation.category }}</td>
            </tr>
            <tr>
                <th>Quantity</th>
                <td>{{ donation.quantity }}</td>
            </tr>
            <tr>
                <th>Date_don</th>
                <td>{{ donation.dateDon ? donation.dateDon|date('Y-m-d') : '' }}</td>
            </tr>
            <tr>
                <th>Status</th>
                <td>{{ donation.status ? 'Yes' : 'No' }}</td>
            </tr>
            <tr>
                <th>Image</th>
                <td>{{ donation.image }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_donation_index') }}">back to list</a>

    <a href="{{ path('app_donation_edit', {'id': donation.id}) }}">edit</a>

    {{ include('donation/_delete_form.html.twig') }}
{% endblock %}
