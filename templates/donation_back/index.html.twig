

{% extends 'baseback.html.twig' %}

{% block body %}
<div class="container">
  <div class="table-container">
    <table class="custom-table">
      <tr>
                <th>Name</th>
                <th>Description</th>
                <th>Category</th>
                <th>Quantity</th>
                <th>Date_don</th>
                <th>Image</th>
                <th>actions</th>

      </tr>
      {% for donation in donations %}
      <tr>

          <td>{{ donation.name }}</td>
          <td>{{ donation.description }}</td>
          <td>{{ donation.category }}</td>
          <td>{{ donation.quantity }}</td>
          <td>{{ donation.dateDon ? donation.dateDon|date('Y-m-d') : '' }}</td>
          <td>  <img src="{{ donation.image }}" alt="Image" class="rounded img-fluid" style="width: 400px; height: 200px;">             </td>
          <td>
              <a href="{{ path('app_donation_back_show', {'id': donation.id}) }}">show</a>
              {{ include('donation_back/_delete_form.html.twig') }}
          </td>
      </tr>
  {% else %}
      <tr>
          <td colspan="9">no records found</td>
      </tr>
  {% endfor %}
    </table>
  </div>
  <aside class="sidebar">
    <!-- Aside content goes here -->
  </aside>
</div>

<style>
.container {
  display: flex;
  justify-content: center; /* Center horizontally */
  align-items: center;
}

.table-container {
  flex: 1;
  
  margin-right: 20px;
  margin-left: 80px; 
}

.custom-table {
  width: 100%;
  border-collapse: collapse;
  background-color: #f2f2f2;
}


.custom-table th {
  background-color: #333;
  color: #fff;
}

.custom-table th,
.custom-table td {
  padding: 10px;
  text-align: left;
  width: auto;
}

.custom-table tr:nth-child(even) {
  background-color: #ddd;
}

.sidebar {
  width: 300px;
  /* Add your sidebar styles here */
}
.event-image {
  max-width: 100px; /* Adjust the width as needed */
  max-height: 100px; /* Adjust the height as needed */
}
</style>
{% endblock %}