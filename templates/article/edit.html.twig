{# app/templates/article/edit.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}Edit Article{% endblock %}

{% block body %}
    <div class="container">
        <h1>Edit Article</h1>

        <div class="row">
            <div class="col-md-8">
                <div class="card mb-4">
                    <div class="card-body">
                    {{ form_start(form, {'attr' :{'novalidate':'novalidate'}}) }}
                        <div class="form-group">
                            {{ form_row(form.title, {'attr': {'class': 'form-control'}}) }}
                           
                        </div>
                        <div class="form-group">
                            {{ form_row(form.content, {'attr': {'class': 'form-control', 'rows': '4'}}) }}
                           
                        </div>
                       
                        <div class="form-group">
                            {{ form_row(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                           
                        </div>
                        <button type="submit" class="btn btn-success float-left">Update</button>
                        {{ form_end(form) }}
                    </div>
                </div>
            </div>

            <div class="col-md-4">
                <div class="card">
                    <div class="card-body">
                        <h5 class="card-title">Actions</h5>
                        <form method="post" action="{{ path('app_article_delete', {'id': article.id}) }}" onsubmit="return confirm('Are you sure you want to delete this article?')">
                            <input type="hidden" name="_token" value="{{ csrf_token('delete' ~ article.id) }}">
                            <button type="submit" class="btn btn-danger mb-2 btn-block">Delete</button>
                        </form>
                        <a href="{{ path('app_article_index') }}" class="btn btn-secondary mb-2 btn-block">Back to List</a>
                    </div>
                </div>
            </div>
        </div>
    </div>
{% endblock %}
