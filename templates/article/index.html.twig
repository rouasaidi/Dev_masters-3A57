{% extends 'base.html.twig' %}

{% block body %}
    <section class="hero-wrap hero-wrap-2" style="background-image: url('images/bg_2.jpg');">
        <div class="overlay"></div>
        <div class="container">
            <div class="row no-gutters slider-text align-items-center justify-content-center">
                <div class="col-md-9 ftco-animate text-center">
                    <h1 class="mb-2 bread">Our Blog</h1>
                    <p class="breadcrumbs">
                        <span class="mr-2"><a href="index.html">Home <i class="ion-ios-arrow-forward"></i></a></span>
                        <span>Blog <i class="ion-ios-arrow-forward"></i></span>
                    </p>
                </div>
            </div>
        </div>
    </section>

    <section class="ftco-section bg-light">
        <div class="container">
            <div class="row">
                {% for article in articles %}
                    <div class="col-md-6 col-lg-4 ftco-animate">
                        <div class="blog-entry">
                            <a href="{{ path('app_article_show', {'id': article.id}) }}" class="block-20 d-flex align-items-end" style="background-image: url('{{ vich_uploader_asset(article, 'imageFile') }}');">
                                <div class="meta-date text-center p-2">
                                    <!-- Simply output the date string -->
                                    
                                    <span>{{ article.getDate ()|date('Y-m-d')}}</span>
                                </div>
                            </a>
                            <div class="text bg-white p-4" style="height: 400px; overflow: hidden;">
                                <h3 class="heading"><a href="{{ path('app_article_show', {'id': article.id}) }}">{{ article.title }}</a></h3>
                                {% set lines = article.content|split("\n") %}
                                {% for line in lines|slice(0, 5) %}
                                    <p class="article-content">{{ line }}</p>
                                {% endfor %}
                            </div>
                            <div class="read-more">
                                <a href="{{ path('app_article_show', {'id': article.id}) }}" class="btn btn-secondary">Read More <span class="ion-ios-arrow-round-forward"></span></a>
                            </div>
                        </div>
                    </div>
                {% endfor %}
            </div>
            <div class="row no-gutters my-5">
                <div class="col text-center">
                    <div class="block-27">
                        <ul>
                            <li><a href="#"><i class="ion-ios-arrow-back"></i></a></li>
                            <li class="active"><span>1</span></li>
                            <li><a href="#">2</a></li>
                            <li><a href="#">3</a></li>
                            <li><a href="#">4</a></li>
                            <li><a href="#">5</a></li>
                            <li><a href="#"><i class="ion-ios-arrow-forward"></i></a></li>
                        </ul>
                    </div>
                </div>
            </div>
        </div>
    </section>
{% endblock %}
