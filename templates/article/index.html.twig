                                                <a href="mailto:?subject={{ article.getTitre() }}&amp;body={{ absolute_url(path('app_article_show_front', {'id': article.getId()})) }}" class="social-icon social-email" title="Email" target="_blank"><i class="fa fa-envelope fa-1.9x"></i></a>
                                            </div><!-- End .soial-icons -->
