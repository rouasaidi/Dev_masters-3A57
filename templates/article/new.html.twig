{% extends 'base.html.twig' %}

{% block stylesheets %}
    {{ parent() }}
    <link rel="stylesheet" href="{{ asset('css/article_form_styles.css') }}">
{% endblock %}

{% block body %}
    <div class="container">
        <div class="row justify-content-center">
            <div class="col-md-6">
                <h1 class="text-center mb-4 text-primary">Create Your Article</h1>

                <div class="article-form-container shadow p-4 mb-5 bg-white rounded">
                    {{ form_start(form, {'attr' :{'novalidate':'novalidate'}}) }}

                    <div class="form-group">
                       
                        {{ form_row(form.title, {'attr': {'class': 'form-control', 'placeholder': 'Enter title', 'maxlength': '50'}}) }}
                        {% if form_errors(form.title) %}
                            <div class="text-danger">{{ form_errors(form.title)|join(', ') }}</div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        
                        {{ form_row(form.content, {'attr': {'class': 'form-control', 'rows': '4', 'placeholder': 'Enter content', 'minlength': '100'}}) }}
                        {% if form_errors(form.content) %}
                            <div class="text-danger">{{ form_errors(form.content)|join(', ') }}</div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        
                        {{ form_row(form.date, {'attr': {'class': 'form-control', 'placeholder': 'YYYY-MM-DD', 'pattern': '\\d{4}-\\d{2}-\\d{2}', 'title': 'Please enter a date in the format YYYY-MM-DD'}}) }}
                        {% if form_errors(form.date) %}
                            <div class="text-danger">{{ form_errors(form.date)|join(', ') }}</div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                       
                        {{ form_row(form.imageFile, {'attr': {'class': 'form-control-file'}}) }}
                        {% if form_errors(form.imageFile) %}
                            <div class="text-danger">{{ form_errors(form.imageFile)|join(', ') }}</div>
                        {% endif %}
                    </div>

                    <div class="form-group">
                        {{ form_rest(form) }}
                        <div class="d-flex justify-content-between mt-4">
                            <button type="submit" class="btn btn-primary">Submit</button>
                           <a href="{{ path('app_article_index') }}" class="btn btn-primary">Back to List</a>
                        </div>
                    </div>

                    {{ form_end(form) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
