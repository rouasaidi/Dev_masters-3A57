{% extends 'baseback.html.twig' %}

{% block title %}Categorie index
{% endblock %}

{% block body %}
	<h1>Categorie index</h1>

	<table class="table">
		<thead>
			<tr>
				<th>Id</th>
				<th>Name</th>
				<th>Description</th>
				<th>Quantity</th>
				<th>Price</th>
				<th>Image</th>
			</tr>
		</thead>
		<tbody>
			{% for product in products %}
				<tr>
					<td>{{ product.id }}</td>
					<td>{{ product.name }}</td>
					<td>{{ product.description }}</td>
					<td>{{ product.quantity }}</td>
					<td>{{ product.price }}</td>
					<td>{{ product.image }}</td>
					<td>
						<a class="btn btn-secondary py-1 px-1" href="{{ path('app_product_show', {'id': product.id}) }}">show</a>
						<a class="btn btn-info py-1 px-3" href="{{ path('app_product_edit', {'id': product.id}) }}">edit</a>

						{{ include('product/_delete_form.html.twig') }}
					</td>
				</tr>
			{% else %}
				<tr>
					<td colspan="4">no records found</td>
				</tr>
			{% endfor %}
		</tbody>
	</table>

	
{% endblock %}
