{% extends 'base.html.twig' %}

{% block title %}sign up{% endblock %}

{% block body %}
<body>
<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">SIGN UP</p>
                {{ form_start(form,{'attr': {'novalidate': 'novalidate'}}) }}
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example3c'}}) }}
                    {{ form_label(form.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}

                    
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.name, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example4c'}}) }}
                    {{ form_label(form.name, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.password, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example5c'}}) }}
                    {{ form_label(form.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.phone, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example6c'}}) }}
                    {{ form_label(form.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.cin, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example7c'}}) }}
                    {{ form_label(form.cin, 'CIN', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.image, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example8c'}}) }}
                    {{ form_label(form.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(form.role, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example9c'}}) }}
                    {{ form_label(form.role, 'Role', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
               </div>
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary btn-lg me-3">modifier</button>
                
                </div>
                {{form_end(form) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
{% endblock %}

