{% extends 'base1.html.twig' %}

{% block title %}EDIT{% endblock %}

{% block body %}
<!DOCTYPE html>
<html>
<head>
    <meta charset="UTF-8">
    <link rel="stylesheet" href="{{ asset('css/fiche.css') }}">
    <style>
        .error-message {
            color: red;
            font-size: 14px;
            font-family: Arial, sans-serif;
            margin-top: 5px;
            border: 1px solid red;
            padding: 5px;
            border-radius: 5px;
        }
    </style>
</head>

<body>
<section class="vh-100">
  <div class="container h-100">
    <div class="row d-flex justify-content-center align-items-center h-100">
      <div class="col-lg-12 col-xl-11">
        <div class="card text-black" style="border-radius: 25px;">
          <div class="card-body p-md-5">
            <div class="row justify-content-center">
              <div class="col-md-10 col-lg-6 col-xl-7 d-flex align-items-center order-1 order-lg-2">
                <img src="https://mdbcdn.b-cdn.net/img/Photos/new-templates/bootstrap-registration/draw1.webp"
                  class="img-fluid" alt="Sample image">
              </div>
              <div class="col-md-10 col-lg-6 col-xl-5 order-2 order-lg-1">
                <p class="text-center h1 fw-bold mb-5 mx-1 mx-md-4 mt-4">EDIT</p>
                {{ form_start(formedit,{'attr': {'novalidate': 'novalidate'}} ) }}
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-envelope fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(formedit.email, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example3c'}}) }}
                    {{ form_label(formedit.email, 'Your Email', {'label_attr': {'class': 'form-label'}}) }}

                    {% for error in formedit.email.vars.errors %}
                    <div class="d-flex align-items-center">
                        <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                        <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                    </div>
                {% endfor %}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-user fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(formedit.name, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example4c'}}) }}
                    {{ form_label(formedit.name, 'Your Name', {'label_attr': {'class': 'form-label'}}) }}

                    {% for error in formedit.name.vars.errors %}
                    <div class="d-flex align-items-center">
                        <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                        <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                    </div>
                {% endfor %}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(formedit.password, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example5c'}}) }}
                    {{ form_label(formedit.password, 'Password', {'label_attr': {'class': 'form-label'}}) }}

                    {% for error in formedit.password.vars.errors %}
                    <div class="d-flex align-items-center">
                        <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                        <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                    </div>
                {% endfor %}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(formedit.phone, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example6c'}}) }}
                    {{ form_label(formedit.phone, 'Phone', {'label_attr': {'class': 'form-label'}}) }}

                    {% for error in formedit.phone.vars.errors %}
                    <div class="d-flex align-items-center">
                        <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                        <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                    </div>
                {% endfor %}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(formedit.cin, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example7c'}}) }}
                    {{ form_label(formedit.cin, 'CIN', {'label_attr': {'class': 'form-label'}}) }}

                    {% for error in formedit.cin.vars.errors %}
                    <div class="d-flex align-items-center">
                        <div class="error-message">{{ error.message }}</div> <!-- Message d'erreur -->
                        <span class="icon-danger" style="color: red;">⚠️</span> <!-- Icône de danger -->
                    </div>
                {% endfor %}
                  </div>
                </div>
                <div class="d-flex flex-row align-items-center mb-4">
                  <i class="fas fa-lock fa-lg me-3 fa-fw"></i>
                  <div class="form-outline flex-fill mb-0">
                    {{ form_widget(formedit.image, {'attr': {'class': 'form-control form-control-lg', 'id': 'form3Example8c'}}) }}
                    {{ form_label(formedit.image, 'Image', {'label_attr': {'class': 'form-label'}}) }}
                  </div>
                </div>

               
                <div class="d-flex justify-content-center mx-4 mb-3 mb-lg-4">
                  <button type="submit" class="btn btn-primary btn-lg me-3"> EDIT</button>
                  
                
                </div>
              
                {{form_end(formedit) }}
              </div>
            </div>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
</body>
</html>
{% endblock %}

